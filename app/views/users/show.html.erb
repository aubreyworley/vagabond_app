<div class='container'>
	<div class="row">
		<div class="col-lg-4">
			<h1 id='profileTitle'>Welcome</h1>
			<h1 id='profileTitle'><%= @current_user.first_name.capitalize %>!</h1>
			<hr>
			<div id="userSettings">
				<h4>Profile Settings</h4>
					<hr>
					<p id="profilePic"> <%= image_tag @current_user.avatar.url(:medium), class: 'img-circle', alt: 'Cinque Terre', width: '160', height: '140' %> </p>
					<hr>
					<p> Name: <%= @current_user.first_name %> <%= @current_user.last_name %>  </p>
					<p> Email Address: <%= @current_user.email %> </p>
					<p> City: <%= @current_user.current_city %> </p>
					<p> User Since: <%=  @current_user.created_at.strftime("%B %d, %Y")%> </p>
					<%= link_to "Edit Profile", '/users/edit', class:"btn btn-primary" %> 
					<hr>
			</div>
		</div>
		<div class="col-lg-8">
			<h1 id='profileTitle'>My Posts</h1>
      <% current_user.stories.each do |story| %>
      		<hr>
				  <p> Subject: <%= link_to story.title, story_path(story) %></p>
				  <p> Posted on <%=  story.created_at.strftime("%B %d, %Y")%> about <%= story.city.city_name %> </p>
				<% end %>

		</div>
	</div>

</div>
